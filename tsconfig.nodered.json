{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./nodes",
    "rootDir": "./src/nodered",
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "sourceMap": false,
    "typeRoots": ["./src/nodered"]
  },
  "include": [
    "src/nodered/victron-ble.ts",
    "src/nodered/nodered.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "**/*.html",
    "**/*.html.ts"
  ]
} 